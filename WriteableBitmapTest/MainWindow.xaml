<Window x:Class="WriteableBitmapTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteableBitmapTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Lines" Width="80" Click="LinesClick"/>
            <Button Content="Horizontal" Width="80" Click="HorizontalClick"/>
            <Button Content="Save" Width="80" Click="SaveClick"/>
        </StackPanel>

        <Image x:Name="Image" Width="300" Height="300"/>
    </DockPanel>
</Window>
